<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <form>
    <div class="mb-3 font-monospace ">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", id: "exampleInputEmail1", autocomplete: "email" %>
    </div>
    <div class="mb-3 font-monospace">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", id: "exampleInputPassword1", autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check font-monospace">
        <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
        <%= f.label :remember_me, class: "form-check-label", for: "exampleCheck1" %>
      </div>
    <% end %>
    <button type="submit" class="btn btn-primary">Log in</button>
  </form>
<% end %>
<%= render "devise/shared/links" %>
